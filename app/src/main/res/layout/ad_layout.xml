<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="@dimen/ad_layout_margin_right"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/ad_choices_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ad_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:cropToPadding="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:maxLength="20"
                android:textAppearance="@style/HandWritingTextAppearance"
                android:textStyle="bold"
                tools:text="aaaaaaaaaaaaaaaaaaaa" />

            <Button
                android:id="@+id/ad_cta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:maxLength="25"
                android:textAppearance="@style/HandWritingTextAppearance"
                android:textColor="@color/colorPrimaryDark"
                tools:text="aaaaaaaaaaaaaaaaaaaaaaaa" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>